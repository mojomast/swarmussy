{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserProfile",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "avatar": {"type": ["string", "null"]},
    "level": {"type": ["number", "null"]},
    "health": {"type": ["number", "null"]},
    "score": {"type": ["number", "null"]},
    "inventory": {
      "type": ["array", "null"],
      "items": {"type": "string"}
    },
    "lastSaved": {"type": ["string", "null"], "format": "date-time"}
  },
  "required": ["id", "name"]
}
