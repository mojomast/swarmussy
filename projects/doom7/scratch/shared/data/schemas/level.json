{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/level.json",
  "$comment": "Level contract used by Editor and Engine persistence",
  "title": "Level",
  "type": "object",
  "properties": {
    "schema_version": {"type": "string", "description": "Schema version of this contract", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "data_version": {"type": "string", "description": "Data payload version for the level instance", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "id": {"type": "string", "format": "uuid"},
    "name": {"type": "string"},
    "size": {
      "type": "object",
      "description": "Level grid size",
      "properties": {"width": {"type": "integer", "minimum": 1}, "height": {"type": "integer", "minimum": 1}},
      "required": ["width", "height"],
      "additionalProperties": false
    },
    "tiles": {
      "type": "array",
      "description": "2D grid of tile indices",
      "items": {"type": "array", "items": {"type": "integer"}}
    },
    "entities": {
      "type": "array",
      "description": "Entities placed within the level",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "template_id": {"type": "string"},
          "position": {
            "type": "object",
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "z": {"type": "number"}
            },
            "required": ["x","y","z"],
            "additionalProperties": false
          },
          "rotation": {"type": "number"},
          "scale": {
            "type": "object",
            "properties": {"x": {"type": "number"}, "y": {"type": "number"}, "z": {"type": "number"}},
            "required": ["x","y","z"],
            "additionalProperties": false
          },
          "properties": {"type": "object"},
          "tags": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["template_id","position"],
        "additionalProperties": false
      }
    }
  },
  "required": ["schema_version","data_version","id","name","size","tiles","entities"],
  "additionalProperties": false
}