{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/asset.json",
  "title": "Asset",
  "type": "object",
  "properties": {
    "schema_version": {"type": "string", "description": "Schema version", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "data_version": {"type": "string", "description": "Data version", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "id": {"type": "string", "format": "uuid"},
    "asset_type": {"type": "string", "enum": ["monster","weapon","environment","texture","audio","item","npc"]},
    "name": {"type": "string"},
    "metadata": {
      "type": "object",
      "properties": {
        "version": {"type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"},
        "author": {"type": "string"},
        "license": {"type": "string"},
        "description": {"type": "string"},
        "tags": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["version","author"],
      "additionalProperties": false
    },
    "data": {"type": "object"},
    "dependencies": {"type": "array", "items": {"type": "string"}}
  },
  "required": ["schema_version","data_version","id","asset_type","name","metadata","data"],
  "additionalProperties": false
}