{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weapon",
  "type": "object",
  "required": ["id","name","damage","range"],
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "damage": {"type": "number"},
    "range": {"type": "number"},
    "cooldown": {"type": "number"},
    "effects": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
