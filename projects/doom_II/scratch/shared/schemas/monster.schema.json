{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Monster",
  "type": "object",
  "required": ["id","name","hit_points","strength","defense","abilities"],
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "hit_points": {"type": "number"},
    "strength": {"type": "number"},
    "defense": {"type": "number"},
    "abilities": {
      "type": "array",
      "items": {"type": "string"}
    },
    "spawn_style": {"type": "string"},
    "loot_drop": {
      "type": "object",
      "properties": {
        "item_id": {"type": "string"},
        "chance": {"type": "number"}
      },
      "required": ["item_id","chance"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
